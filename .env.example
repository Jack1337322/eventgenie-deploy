# EventGenie Production Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Server Configuration
# ============================================
SERVER_HOST=your-domain.com
FRONTEND_PORT=3000
BACKEND_PORT=8080
AGENTS_PORT=8001
POSTGRES_PORT=5432

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=eventgenie
POSTGRES_PASSWORD=your_secure_password_here_change_this
POSTGRES_DB=eventgenie

# ============================================
# GigaChat API Configuration
# ============================================
# Get credentials from: https://developers.sber.ru/portal/products/gigachat
GIGACHAT_CLIENT_ID=your_gigachat_client_id
GIGACHAT_CLIENT_SECRET=your_gigachat_client_secret
GIGACHAT_MODEL=GigaChat
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# ============================================
# Backend Configuration
# ============================================
# JWT Secret - use a strong random string (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRATION=86400000

# ============================================
# Frontend Configuration
# ============================================
# API URL for frontend (should match your backend URL)
VITE_API_URL=http://your-domain.com:8080

# ============================================
# Optional: GitHub Token
# ============================================
# Only needed if repositories are private
# GITHUB_TOKEN=your_github_personal_access_token
